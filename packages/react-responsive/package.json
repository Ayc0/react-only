    "browser": "./dist/react-responsive.modern.js",
    "umd": "./dist/react-responsive.umd.js"
  },
  "repository": "git@github.com:bloczjs/react-responsive.git",
  "keywords": [
    "adaptive",
    "breakpoint",
    "css",
    "media-query",
    "react",
    "responsive",
