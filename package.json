{
  "name": "react-only",
  "version": "1.0.2",
  "description": "üîç <Only /> displays some contents for a specific screen size",
  "source": "src/index.ts",
  "umd:main": "lib/react-only.umd.js",
  "module": "lib/react-only.es.js",
  "main": "lib/react-only.js",
  "types": "lib/index.d.ts",
  "repository": "git@github.com:Ayc0/react-only.git",
  "keywords": [
    "react",
    "css",
    "media-queries",
    "bootstrap",
    "responsive"
  ],
  "author": "Ayc0",
  "license": "MIT",
  "bugs": "https://github.com/Ayc0/react-only/issues",
  "scripts": {
    "build:watch": "nodemon --watch src -e js --exec \"yarn -s build:dev\"",
    "build:all": "yarn -s build && yarn build:preact",
    "build:preact": "cd preact && yarn -s build && cd ..",
    "build": "yarn -s build:microbundle",
    "build:dev": "yarn -s build:microbundle --compress false",
    "build:microbundle": "microbundle --name $npm_package_name --globals react=React",
    "prepublishOnly": "rm -rf lib && yarn -s build"
  },
  "homepage": "https://github.com/Ayc0/react-only#readme",
  "devDependencies": {
    "@types/react": "^16.8.19",
    "@typescript-eslint/parser": "^1.9.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.13.0",
    "microbundle": "^0.11.0",
    "nodemon": "^1.19.1",
    "typescript": "^3.5.1"
  },
  "peerDependencies": {
    "react": "^16.8.0"
  }
}
