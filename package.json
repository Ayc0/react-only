{
  "name": "react-only",
  "version": "0.7.0",
  "description": "üîç <Only /> displays some contents for a specific screen size",
  "source": "babel/index.js",
  "umd:main": "lib/react-only.umd.js",
  "module": "lib/react-only.es.js",
  "main": "lib/react-only.js",
  "repository": "git@github.com:Ayc0/react-only.git",
  "keywords": [
    "react",
    "css",
    "media-queries",
    "bootstrap",
    "responsive"
  ],
  "author": "Ayc0",
  "license": "MIT",
  "bugs": "https://github.com/Ayc0/react-only/issues",
  "scripts": {
    "build:watch": "nodemon --watch src -e js --exec \"yarn -s build:dev\"",
    "build:all": "yarn -s build && cd preact && yarn -s build && cd ..",
    "build": "yarn -s build:babel && yarn -s build:microbundle && rm -rf babel",
    "build:dev": "yarn -s build:babel && yarn -s build:microbundle --compress false",
    "build:babel": "babel src --out-dir babel",
    "build:microbundle": "microbundle --name $npm_package_name --globals react=React",
    "prepublishOnly": "rm -rf lib && yarn -s build:all"
  },
  "homepage": "https://github.com/Ayc0/react-only#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.2",
    "babel-plugin-module-resolver": "^3.1.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-react": "^6.24.1",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "microbundle": "^0.7.0",
    "nodemon": "^1.18.5"
  },
  "peerDependencies": {
    "react": "^16.0.0"
  }
}
