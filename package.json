{
  "name": "react-only",
  "version": "0.6.4",
  "description": "üîç <Only /> displays some contents for a specific screen size",
  "source": "tmp/index.js",
  "umd:main": "lib/react-only.umd.js",
  "module": "lib/react-only.es.js",
  "main": "lib/react-only.js",
  "repository": "git@github.com:Ayc0/react-only.git",
  "keywords": [
    "react",
    "css",
    "media-queries",
    "bootstrap",
    "responsive"
  ],
  "author": "Ayc0",
  "license": "MIT",
  "bugs": "https://github.com/Ayc0/react-only/issues",
  "scripts": {
    "build": "yarn -s build:tmp && yarn -s build:min && rm -rf tmp",
    "build:tmp": "babel src --out-dir tmp",
    "build:min": "microbundle --name $npm_package_name && sed -i -- 's/t.react/t.React/g' $npm_package_umd_main",
    "build:watch": "nodemon --watch src -e js --exec yarn -s build",
    "prepublishOnly": "rm -rf lib && yarn -s build"
  },
  "homepage": "https://github.com/Ayc0/react-only#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-react": "^6.24.1",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "microbundle": "^0.6.0",
    "nodemon": "^1.12.1"
  },
  "peerDependencies": {
    "react": "^16.0.0"
  }
}
